@startuml Booking a Workspace

title Booking a Workspace

participant "Client" as client
participant "Server" as server
participant "Booking Controller" as bookingCtrl
participant "Booking Model" as bookingModel
database "Database" as db

client -> server: POST /bookings
server -> bookingCtrl: createBooking(bookingData)
bookingCtrl -> bookingModel: create(bookingData)
bookingModel -> db: insert booking
db -> bookingModel: success
bookingModel -> bookingCtrl: booking confirmed
bookingCtrl -> server: response (booking success)
server -> client: response (booking details)

@enduml
